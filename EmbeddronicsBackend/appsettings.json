{
  "ConnectionStrings": {
    "DefaultConnection": "Server=(localdb)\\mssqllocaldb;Database=EmbeddronicsDB;Trusted_Connection=true;MultipleActiveResultSets=true;TrustServerCertificate=true",
    "Redis": "localhost:6379"
  },
  "JwtSettings": {
    "SecretKey": "EmbeddronicsSecretKey2024!@#$%^&*()_+1234567890ABCDEFGHIJKLMNOPQRSTUVWXYZ",
    "Issuer": "EmbeddronicsAPI",
    "Audience": "EmbeddronicsClient",
    "AccessTokenExpirationMinutes": 60,
    "RefreshTokenExpirationDays": 7
  },
  "EmailSettings": {
    "IsEnabled": false,
    "SmtpHost": "smtp.gmail.com",
    "SmtpPort": 587,
    "EnableSsl": true,
    "Username": "",
    "Password": "",
    "FromEmail": "noreply@embeddronics.com",
    "FromName": "Embeddronics",
    "AdminEmail": "admin@embeddronics.com"
  },
  "Performance": {
    "Cache": {
      "Enabled": true,
      "UseRedis": false,
      "RedisConnectionString": "localhost:6379",
      "RedisInstanceName": "Embeddronics_",
      "DefaultDurationMinutes": 30,
      "L1CacheDurationSeconds": 30
    },
    "RateLimit": {
      "Enabled": true,
      "PermitLimit": 100,
      "WindowSeconds": 60,
      "AuthenticatedPermitLimit": 500,
      "AnonymousPermitLimit": 50,
      "ExemptEndpoints": [ "/health", "/swagger" ],
      "EndpointLimits": {
        "/api/auth/login": {
          "PermitLimit": 10,
          "WindowSeconds": 60
        },
        "/api/auth/register": {
          "PermitLimit": 5,
          "WindowSeconds": 300
        },
        "/api/contact": {
          "PermitLimit": 10,
          "WindowSeconds": 60
        }
      }
    },
    "Security": {
      "EnableHsts": true,
      "HstsMaxAgeSeconds": 31536000,
      "EnableCrossOriginPolicies": false,
      "XFrameOptions": "DENY"
    },
    "RequestLimits": {
      "MaxRequestBodySize": 52428800,
      "RequestTimeoutSeconds": 120,
      "MaxFileUploadSize": 26214400,
      "MaxQueryStringLength": 2048,
      "MaxUrlLength": 8192
    }
  },
  "Monitoring": {
    "EnableDetailedHealthChecks": true,
    "MemoryThresholdMB": 1024,
    "DiskSpaceMinimumMB": 500,
    "SlowRequestThresholdMs": 1000,
    "EnablePrometheusMetrics": true
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information",
        "Microsoft.EntityFrameworkCore": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj} {Properties:j}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/embeddronics-log-.txt",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 30
        }
      },
      {
        "Name": "Seq",
        "Args": {
          "serverUrl": "http://localhost:5341"
        }
      }
    ],
    "Enrich": [ "FromLogContext" ],
    "Properties": {
      "Application": "EmbeddronicsAPI"
    }
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*"
}